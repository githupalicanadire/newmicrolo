{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "BaseUrl": "http://localhost:6006"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/identity-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Proto", "Append": "https" }
        ]
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/catalog-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Proto", "Append": "https" }
        ]
      },
      "basket-route": {
        "ClusterId": "basket-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/basket-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Proto", "Append": "https" }
        ]
      },
      "ordering-route": {
        "ClusterId": "ordering-cluster",
        "AuthorizationPolicy": "default",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/ordering-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Proto", "Append": "https" }
        ]
      },
      "discount-route": {
        "ClusterId": "discount-cluster",
        "Match": {
          "Path": "/discount-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Proto", "Append": "https" }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://identity.api:8080",
            "Health": "http://identity.api:8080/health"
          }
        }
      },
      "catalog-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://catalog.api:8080",
            "Health": "http://catalog.api:8080/health"
          }
        }
      },
      "basket-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://basket.api:8080",
            "Health": "http://basket.api:8080/health"
          }
        }
      },
      "ordering-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://ordering.api:8080",
            "Health": "http://ordering.api:8080/health"
          }
        }
      },
      "discount-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://discount.grpc:8080",
            "Health": "http://discount.grpc:8080/health"
          }
        }
      }
    }
  }
}
