@page
@model Shopping.Web.Pages.AuthTestModel
@{
    ViewData["Title"] = "Authentication Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3><i class="fas fa-shield-alt me-2"></i>Authentication Flow Test</h3>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="alert alert-success">
                            <h5><i class="fas fa-check-circle me-2"></i>Successfully Authenticated!</h5>
                            <p><strong>User:</strong> @User.Identity.Name</p>
                            <p><strong>Authentication Type:</strong> @User.Identity.AuthenticationType</p>
                        </div>

                        <h5>User Claims:</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Claim Type</th>
                                        <th>Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in User.Claims)
                                    {
                                        <tr>
                                            <td><code>@claim.Type</code></td>
                                            <td>@claim.Value</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <h5>Authentication Properties:</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6>User Service Info:</h6>
                                        <ul class="list-unstyled">
                                            <li><strong>User ID:</strong> @Model.UserId</li>
                                            <li><strong>User Name:</strong> @Model.UserName</li>
                                            <li><strong>Email:</strong> @Model.UserEmail</li>
                                            <li><strong>Customer ID:</strong> @Model.CustomerId</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6>Actions:</h6>
                                        <div class="d-grid gap-2">
                                            <a asp-page="/Cart" class="btn btn-success">
                                                <i class="fas fa-shopping-cart me-2"></i>Test Cart Access
                                            </a>
                                            <a asp-page="/OrderList" class="btn btn-info">
                                                <i class="fas fa-list me-2"></i>Test Orders Access
                                            </a>
                                            <a asp-page="/Logout" class="btn btn-warning">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle me-2"></i>Not Authenticated</h5>
                            <p>You need to login to test the authentication flow.</p>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-page="/Login" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to Test Authentication
                            </a>
                        </div>
                    }

                    <hr />

                    <h5>Configuration Debug Info:</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h6>Identity Server Configuration:</h6>
                                    <ul class="list-unstyled">
                                        <li><strong>Base URL:</strong> @Model.IdentityServerUrl</li>
                                        <li><strong>Gateway URL:</strong> @Model.GatewayUrl</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h6>Current Request Info:</h6>
                                    <ul class="list-unstyled">
                                        <li><strong>Host:</strong> @HttpContext.Request.Host</li>
                                        <li><strong>Scheme:</strong> @HttpContext.Request.Scheme</li>
                                        <li><strong>Path:</strong> @HttpContext.Request.Path</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <h6><i class="fas fa-exclamation-circle me-2"></i>Error:</h6>
                            <p>@Model.ErrorMessage</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table code {
        background-color: #f8f9fa;
        padding: 2px 4px;
        border-radius: 3px;
        font-size: 0.875em;
    }

    .alert {
        border: none;
        border-radius: 10px;
    }

    .btn {
        border-radius: 8px;
    }
</style>
